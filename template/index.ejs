    <div class="w-25 h-100 mx-auto mt-5 bg-light shadow p-4">
        <div class="text-center">
            <h1 class="text-uppercase">Product Manager</h1>
        </div>
        <form class="mt-5" action="/" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="productId" class="form-label">Product ID</label>
                <input type="text" name="MaSanPham" class="form-control" id="productId" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">Field not null.</div>
            </div>
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" name="TenSanPham" class="form-control" id="productName">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Product Description</label>
                <input type="text" name="MoTaSanPham" class="form-control" id="description">
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>
    <div class="w-75 mx-auto mt-3">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <%for(let i=0; i < data.length; i++) {%>
                    <tr>

                        <th scope="row">
                            <%=data[i].MaSanPham%>
                        </th>
                        <td>
                            <%=data[i].TenSanPham%>
                        </td>
                        <td>
                            <%=data[i].MoTaSanPham%>
                        </td>
                        <td>
                            <div class="d-flex">
                                <button type="submit" class="btn btn-primary">Update</button>
                                <form action='/delete' enctype="multipart/form-data" method="POST">
                                    <input type="hidden" name="MaSanPham" value="<%=data[i].MaSanPham%>">
                                    <input type="hidden" name="TenSanPham" value="<%=data[i].TenSanPham%>">
                                    <button type="submit" class="ms-2 btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>

                    <%}%>

            </tbody>
        </table>
